.banner {
  width: 100%;
  display: flex;
  height: 400rpx;
  justify-content: flex-end;
  align-items: flex-end;
  flex-direction: column;
  color: #333;
  font-size: 36rpx;
}
.company {
  width: 100%;
  height: 100px;
}

.section__title {
  font-size: 48rpx;
  color: #333;
  padding: 40rpx;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  padding: 40rpx;
}

.button-box {
  position: absolute;
  bottom: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.submit-btn {
  background: #0e55bf;
  color: #fff;
}

.palcetest {
  color: #bbb;
}

.dateshow {
  margin: 10rpx;
  color: #333;
}

.errortext {
