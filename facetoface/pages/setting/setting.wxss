.section {
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #d0d0d0;
}

.picker {
  min-width: 100rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  /* background: red; */
}

.right-btn {
  width: 50rpx;
  height: 50rpx;
}

.main {
  display: flex;
}

.sex {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.section__title {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  width: 200rpx;
}
.radio{
  margin-right: 15rpx;
}
.save{
  background: #0189FE;
  width: 80%;
  margin-top: 100rpx;
  color: #ffffff;
}
