.task-item {
  display: flex;
  border: 1px solid linear-gradient(to right, #1296db, #07b65e);
  justify-content: space-between;
  align-items: center;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx #d6d6d6;
}

.btn-style {
  background: linear-gradient(to right, #1296db, #07b65e);
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  width: 100%;
}
.btn-style-dis {
  background: linear-gradient(to right, #d6d6d6, #f2f2f2);
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  width: 100%;
}

.money {
  color: #1296db;
  font-size: 36rpx;
  text-align: right;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border: 1rpx dashed #f2f2f2; */
  margin-top: 10rpx;
}

.time {
  font-size: 24rpx;
  color: #333;
}

.name {
  font-size: 24rpx;
}

.work {
