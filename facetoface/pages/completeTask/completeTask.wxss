.task-item {
  display: flex;
  border: 1px solid linear-gradient(to right, #1296db, #07b65e);
  justify-content: space-between;
  align-items: center;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx #d6d6d6;
}

.btn-style {
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  width: 80rpx;
}

.money {
  color: #1296db;
  font-size: 36rpx;
  text-align: right;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border: 1rpx dashed #f2f2f2; */
  margin-top: 10rpx;
}

.time {
  font-size: 24rpx;
  color: #333;
}

.name {
  font-size: 30rpx;
  color: #333;
  opacity: 0.7;
}

.work {
  /* background: red; */
  width: 80%;
}

.count {
  font-size: 28rpx;
  text-align: right;
  color: #333;
}
.tiparea{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #1296db;
  text-align: center;
  justify-content: center;
  align-items: center;
}
